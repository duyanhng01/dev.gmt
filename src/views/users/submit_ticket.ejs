<%- include('./partial/head', { title: 'gamota Customer Support' }) %>
<%- include('./partial/header') %>

<body class="bg-gray-100 p-8">
    <div class="max-w-2xl mx-auto bg-white p-8 rounded-md shadow-md grid grid-cols-2 gap-8">
        <div>
            <form action="/tickets" method="post" enctype="multipart/form-data">
                <div class="mb-4">
                    <label for="error_type" class="block mb-2">Loại lỗi:</label>
                    <select id="error_type" name="error_type" required class="w-full px-4 py-2 border rounded-md">
                        <option value="account">Tài khoản</option>
                        <!-- Add other options here -->
                    </select>
                </div>
                <div class="mb-4">
                    <label for="topic" class="block mb-2">Chủ đề lỗi:</label>
                    <input type="text" id="topic" name="topic" required class="w-full px-4 py-2 border rounded-md">
                </div>
                <div class="mb-4">
                    <label for="phone_number" class="block mb-2">Điện thoại liên hệ:</label>
                    <input type="text" id="phone_number" name="phone_number" required class="w-full px-4 py-2 border rounded-md">
                </div>
                <div class="mb-4">
                    <label for="email" class="block mb-2">Email:</label>
                    <input type="email" id="email" name="email" required class="w-full px-4 py-2 border rounded-md">
                </div>
            </form>
        </div>
        <div>
            <form action="/tickets" method="post" enctype="multipart/form-data">
        <div class="mb-4">
            <label for="game" class="block mb-2">Chọn game:</label>
            <select id="game" name="game" required class="w-full px-4 py-2 border rounded-md">
                <% games.forEach(game => { %>
                    <option value="<%= game.api_key %>"><%= game.gameName %></option>
                <% }); %>
            </select>
        </div>
                

               
                <div class="mb-4">
                    <label for="server" class="block mb-2">Chọn server:</label>
                    <select id="server" name="server" required class="w-full px-4 py-2 border rounded-md">
                        <!-- Add server options here -->
                    </select>
                </div>
                <div class="mb-4">
                    <label for="character" class="block mb-2">Chọn Nhân Vật:</label>
                    <input type="text" id="character" name="character" required class="w-full px-4 py-2 border rounded-md">
                </div>
                <div class="mb-4">
                    <label for="description" class="block mb-2">Mô tả vấn đề:</label>
                    <textarea id="description" name="description" rows="4" required class="w-full px-4 py-2 border rounded-md"></textarea>
                </div>
                <div class="mb-4">
                    <label for="attachment" class="block mb-2">Đính kèm ảnh:</label>
                    <input type="file" id="attachment" name="attachment" class="w-full px-4 py-2 border rounded-md">
                </div>
                <div class="text-right">
                    <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Gửi yêu cầu</button>
                </div>
            </form>
        </div>
    </div>

 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
 

